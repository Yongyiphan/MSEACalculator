<Page
    x:Class="MSEACalculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MSEACalculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <NavigationView x:ConnectionId='2' Name="navBar"
                                              
                                                                   OpenPaneLength="180"
                        >
            <NavigationView.MenuItems>
                <NavigationViewItem x:ConnectionId='3' Icon="Home" Name="Home" Content="Home" Tag="Home_Page"/>
                <NavigationViewItem x:ConnectionId='4' Name="Meso" Content="Meso" Tag="Meso_Page"/>
                <NavigationViewItem x:ConnectionId='5' Name="Character" Content="Character" Tag="Character_Page"/>
                <NavigationViewItem x:ConnectionId='6' Name="Event" Content="Event" Tag="Event_Page"/>
            </NavigationView.MenuItems>
            
        

            <ScrollViewer>
                <Frame x:ConnectionId='7' x:Name="ContentFrame" Padding="20" ></Frame>
            </ScrollViewer>

        </NavigationView>
    </Grid>

    
</Page>

