<Page
    x:Class="MSEACalculator.MainAppRes.Settings.AddCharTrackPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MSEACalculator.MainAppRes.Settings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10 0 0 0"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="10 0 0 0"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="10 0 0 0"/>
        </Style>
        <Style x:Key="SP" TargetType="StackPanel">
            <Setter Property="Margin" Value="0 5 0 0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="10 0 0 0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
    </Page.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid ColumnSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <!--CHARACTER SELECTION/ ADDITION TO DATABASE/ REMOVAL FROM DATABASE-->
                <StackPanel Orientation="Horizontal" Style="{StaticResource SP}">
                    <ComboBox x:ConnectionId='10' x:Name="AllCharList" VerticalAlignment="Center" Width="200" 
                              ItemsSource="{Binding AllCharList}" DisplayMemberPath="className" 
                              SelectedItem="{Binding SelectedAllChar, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                    <TextBlock Text="Level"/>
                    <TextBox Text="{Binding LvlInput, UpdateSourceTrigger=LostFocus, Mode=TwoWay}" />
                    <TextBlock Text="Starforce"/>
                    <TextBox/>
                    <Button x:ConnectionId='11' x:Name="AddTrack" Content="Add" Command="{Binding addCharTrackCMD}"/>
                    <Button x:ConnectionId='12' x:Name="RemoveTrack" Content="Remove"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <StackPanel Orientation="Vertical">
                    <!--TOGGLE TO ADD EQUIPMENT ALONG WITH CHARACTER-->
                    <StackPanel Orientation="Horizontal" Style="{StaticResource SP}">
                        <CheckBox Content="Add Equipment?" IsChecked="{Binding ChkBoxSelected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FlowDirection="RightToLeft" Margin="5 0 0 0" FontSize="17"/>
                        <Button Content="Add Item" VerticalAlignment="Bottom" HorizontalAlignment="Right" Visibility="{Binding ShowEquipmentPanel, Mode=TwoWay}"/>
                    </StackPanel>
                    <!--FIELDS FOR EQUIPMENT ITEM SELECTION-->
                    <StackPanel Orientation="Horizontal" Style="{StaticResource SP}" Visibility="{Binding ShowEquipmentPanel, Mode=TwoWay}" >
                        <TextBlock Text="Equip Slot"/>
                        <ComboBox x:ConnectionId='7' x:Name="EquipmentSlot" Width="150" 
                                  ItemsSource="{Binding AllCharTModel.EquipSlot}" 
                                  DisplayMemberPath="Key" 
                                  SelectedValue="{Binding SelectedESlot, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                  SelectedValuePath="Key"
                                  />
                        <TextBlock Text="Set: "/>
                        <ComboBox x:ConnectionId='8' x:Name="EquipmentList" Width="130" ItemsSource="{Binding ArmorSet, Mode=TwoWay}"/>
                        <!--OPTION TO ADD WEAPON-->
                        <TextBlock Text="Weapon Type" Visibility="{Binding ShowWeapon, Mode=TwoWay}"/>
                        <ComboBox x:ConnectionId='9' x:Name="WeapType" Width="130" Visibility="{Binding ShowWeapon, Mode=TwoWay}"/>
                    </StackPanel>
                    <!--SCROLLING RECORDS-->
                    <TextBlock Text="Scroll" Margin="5" FontSize="17" Visibility="{Binding ShowBonusStat, Mode=TwoWay}" />
                    <StackPanel Orientation="Horizontal" Style="{StaticResource SP}" Visibility="{Binding ShowBonusStat, Mode=TwoWay}">
                        <CheckBox x:ConnectionId='6' x:Name="chkSpellTrace" Content="Spell Traced?" FlowDirection="RightToLeft" Margin="5 0 0 0 " FontSize="17"
                                  IsChecked="{Binding IsSpellTrace, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                        <TextBlock Text="Slot" Visibility="{Binding ShoWSlot, Mode=TwoWay}"/>
                        <ComboBox ItemsSource="{Binding Slots}" Visibility="{Binding ShoWSlot, Mode=TwoWay}"
                                  SelectedItem="{Binding NoSlot, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                        
                        <!--<TextBlock Text="Scroll Type"/>-->
                        <!--<ComboBox ItemsSource="{Binding ScrollTypes}" 
                                  SelectedItem="{Binding SelectedScroll, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>-->
                        <TextBlock Text="{Binding ScrollTypeTxt}"/>
                        <ComboBox ItemsSource="{Binding StatTypes}"
                                  SelectedItem="{Binding SelectedScrollStat, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                        <TextBlock Text="Value" Visibility="{Binding ShowScrollValue}"/>
                        <TextBox Visibility="{Binding ShowScrollValue}" Text="{Binding ScrollStatValue, UpdateSourceTrigger=LostFocus, Mode=TwoWay}"/>
                    </StackPanel>
                    <!--FLAMING RECORDS-->
                    <TextBlock Text="Flame" Margin="5" FontSize="17" Visibility="{Binding ShowBonusStat, Mode=TwoWay}"/>
                    <StackPanel Orientation="Horizontal" Style="{StaticResource SP}" Visibility="{Binding ShowBonusStat, Mode=TwoWay}">
                        <TextBlock Text="Stat Type"/>
                        <ComboBox ItemsSource="{Binding FlameStatsTypes}"/>
                        <TextBlock Text="Value"/>
                        <TextBox/>
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="2">
                <!--<TextBlock Text="{Binding TestVar}"/>-->
                <ListView ItemsSource="{Binding ScrollRecord, Mode=TwoWay}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="KeyTxt" Text="{Binding Key}"/>
                                <TextBlock x:Name="ValTxt" Text="{Binding Value}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                    
                </ListView>
            </Grid>
            <Grid Grid.Row="8">
                <Button x:ConnectionId='2' x:Name="UpdateDB" Content="Update DB" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
            </Grid>
        </Grid>

        <Grid Grid.Column="1">
            <ListView ItemsSource="{Binding CharTrackList, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" DisplayMemberPath="className"/>
        </Grid>
    </Grid>
</Page>

