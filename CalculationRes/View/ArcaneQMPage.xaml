<Page
    x:Class="MSEACalculator.CalculationRes.View.ArcaneQMPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MSEACalculator.CalculationRes.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls" 
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <!--PURPOSE-->
    <!--CALCULATE BASE OFF CURRENT LEVEL, ACC EXP => NEW LVL AND EXP-->
    <!---->
    <!---->
    
    <Page.Resources>
        
        <DataTemplate x:Key="ArcaneInput">
            <Grid Margin="0 10">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Current Level: "/>
                        <TextBox Text="{Binding CurrentLevel, UpdateSourceTrigger=LostFocus, Mode=TwoWay}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        
                        <TextBox ToolTipService.ToolTip="Current Symbol Exp" FontSize="11"/>
                        <TextBlock Text="  /" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding CurrentLimit, Mode=TwoWay}" 
                                   
                                   FontSize="15" VerticalAlignment="Center" Margin="5 0"/>
                        
                    </StackPanel>
                </StackPanel>
            </Grid>
        </DataTemplate>
        
        <DataTemplate x:Key="ArcaneDSelect">
            <Grid>
                <ToggleSwitch OffContent="0" OnContent="{Binding BaseSymbolGain, Mode=TwoWay}"
                              IsOn="{Binding ElementName=PageGrid, Path=DataContext.ResetDailyS, Mode=TwoWay}"
                              ToolTipService.ToolTip="Daily Missions">
                    Daily Symbol Sources:
                </ToggleSwitch>
            </Grid>
        </DataTemplate>
        
        <DataTemplate x:Key="ArcanePQ">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <ContentPresenter 
                                      ContentTemplate="{StaticResource ArcaneDSelect}"/>
                </Grid>
                <Grid Grid.Column="1">
                    <ToggleSwitch OffContent="0" OnContent="{Binding PartyQuestSymbols, Mode=TwoWay}"
                                  VerticalAlignment="Bottom" 
                                  IsOn="{Binding ElementName=PageGrid, Path=DataContext.ResetPQS, Mode=TwoWay}">
                        PQ
                    </ToggleSwitch>
                </Grid>
            </Grid>
        </DataTemplate>
        
        <DataTemplate x:Key="ArcaneFlex">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                
                <Grid Grid.Column="0">
                    <ContentControl 
                                    ContentTemplate="{StaticResource ArcaneDSelect}"/>
                </Grid>
                <Grid Grid.Column="1">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Party Quest:" VerticalAlignment="Bottom" Margin="0 10"/>
                        <muxc:NumberBox VerticalAlignment="Bottom" SpinButtonPlacementMode="Compact">
                            <ToolTipService.ToolTip>
                                <ToolTip>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Max value: "/>
                                        <TextBlock Text="{Binding PQGainLimit, Mode=TwoWay}"/>
                                        
                                    </StackPanel>
                                </ToolTip>
                            </ToolTipService.ToolTip>
                        </muxc:NumberBox>
                    </StackPanel>
                </Grid>
            </Grid>
        </DataTemplate>
        
        <!--SArcaneSymbol.PQGainLimit-->
        
        

        <DataTemplate x:Key="DisplayNewArcane">
            
        </DataTemplate>

    </Page.Resources>
    <Grid x:Name="PageGrid">
        <Grid.Resources>
            <Style TargetType="Grid">
                <Setter Property="Margin" Value="1"/>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <StackPanel>
                    <!--SYMBOL SELECTION-->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Select Symbol: "/>
                        <ComboBox Width="150" ItemsSource="{Binding ArcaneSymbolList, Mode=TwoWay}"
                                  DisplayMemberPath="Name"
                                  SelectedItem="{Binding SArcaneSymbol, UpdateSourceTrigger=LostFocus, Mode=TwoWay}"/>
                    </StackPanel>
                    
                    <!--ENTER CURRENT LEVEL AND SYMBOL EXPERIENCE-->
                    <StackPanel Margin="0 10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Current Level: "/>
                            <ComboBox ItemsSource="{Binding SymbolLvls, Mode=TwoWay}"
                                      SelectedIndex="{Binding CLvlIndex, Mode=TwoWay}"
                                      SelectedItem="{Binding CLvl, UpdateSourceTrigger=LostFocus, Mode=TwoWay}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Text="{Binding CExp, UpdateSourceTrigger=LostFocus, Mode=TwoWay}"
                                     TextAlignment="Center" FontSize="15"
                                     Width="70"
                                     ToolTipService.ToolTip="Current Symbol Exp"/>
                            <TextBlock Text="  /" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding CLimit, Mode=TwoWay}" FontSize="15" VerticalAlignment="Center" Margin="5 0"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!--DISPLAY PQ TYPE INPUT-->
                    <ContentControl Content="{Binding SArcaneSymbol, Mode=TwoWay}"
                                    Visibility="{Binding ShowPQ, Mode=TwoWay}"
                                    ContentTemplate="{StaticResource ArcanePQ}"/>

                    

                    <!--DISPLAY FELX TYPE INPUT-->
                    <Grid Visibility="{Binding ShowFlex, Mode=TwoWay}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <ContentControl Content="{Binding SArcaneSymbol, Mode=TwoWay}"
                                            ContentTemplate="{StaticResource ArcaneDSelect}"/>
                        </Grid>
                        <Grid Grid.Column="1">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Party Quest:" VerticalAlignment="Bottom" Margin="0 10"/>
                                <TextBox Text="{Binding PQGains, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" VerticalAlignment="Bottom">
                                    <ToolTipService.ToolTip>
                                        <ToolTip>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Max value: "/>
                                                <TextBlock Text="{Binding SArcaneSymbol.PQGainLimit, Mode=TwoWay}"/>
                                            </StackPanel>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </TextBox>
                            </StackPanel>
                        </Grid>
                    </Grid>
                    
                    <!--DISPLAY SUBMAP IF EXISTS-->
                    <CheckBox Content="{Binding SArcaneSymbol.SubMap, Mode=TwoWay}" 
                              Visibility="{Binding ShowSubMap, Mode=TwoWay}"
                              IsChecked="{Binding isSubMap, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              ToolTipService.ToolTip="Completed?"/>
                    <Button Content="Add/ Update" Command="{Binding AddSymbolCMD, Mode=TwoWay}"/>
                </StackPanel>
            </Grid>
            
            
            
            
            <!--ADDITIONAL INPUT/ OPTIONAL-->
            <Grid Grid.Column="1">
                <StackPanel>
                    <CheckBox Content="Arcane Catalyst?" Margin="15 0 0 0" VerticalContentAlignment="Top"/>
                    <TextBlock FontSize="16">
                        <Bold>Days to max</Bold>
                    </TextBlock>
                    <TextBlock Text ="N Date (N Days)"/>
                    <TextBlock FontSize="17">
                                <Bold>Arcane Force:</Bold>
                    </TextBlock>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Current AF"/>
                        <TextBlock Text="/"/>
                        <TextBlock Text="Total AF"/>
                    </StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="Guild Skills: "/>
                        </Grid>
                        <Grid Grid.Row="0" Grid.Column="1">
                            <TextBox/>
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="0">
                            <TextBlock Text="Hyper Skills:"/>
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="1">
                            <TextBox/>
                        </Grid>
                    </Grid>

                    <ComboBox>
                        <ComboBoxItem Content="General"/>
                        <ComboBoxItem Content="Xenon"/>
                        <ComboBoxItem Content="Demon Avenger"/>
                    </ComboBox>
                    <TextBlock Text="Extra Stats:"/>
                    <TextBlock/>
                </StackPanel>
            </Grid>
        </Grid>
        
    </Grid>
</Page>

